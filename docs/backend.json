{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "attempt": {
      "title": "Attempt",
      "description": "Represents a single attempt at a math problem.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who made the attempt."
        },
        "problem": {
          "type": "object",
          "properties": {
            "operand1": {
              "type": "number"
            },
            "operand2": {
              "type": "number"
            },
            "operator": {
              "type": "string",
              "enum": [
                "ร",
                "รท"
              ]
            },
            "answer": {
              "type": "number"
            },
            "question": {
              "type": "string"
            },
            "colorTheme": {
              "type": "string",
              "enum": [
                "orange",
                "blue"
              ]
            }
          },
          "required": [
            "operand1",
            "operand2",
            "operator",
            "answer",
            "question",
            "colorTheme"
          ]
        },
        "isCorrect": {
          "type": "boolean",
          "description": "Whether the attempt was correct or not."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The time the attempt was made."
        }
      },
      "required": [
        "userId",
        "problem",
        "isCorrect",
        "timestamp"
      ]
    },
    "userProfile": {
      "title": "User Profile",
      "description": "Stores user-specific settings and progress, including daily stats and rewards.",
      "type": "object",
      "properties": {
        "dailyStats": {
          "type": "object",
          "properties": {
            "currentPoints": {
              "type": "number"
            },
            "lastPlayedDate": {
              "type": "string",
              "description": "The last date the user played, in YYYY-MM-DD format."
            }
          }
        },
        "rewardsConfig": {
          "type": "object",
          "properties": {
            "level1": {
              "type": "string",
              "description": "Prize for reaching 1000 points."
            },
            "level2": {
              "type": "string",
              "description": "Prize for reaching 2000 points."
            },
            "level3": {
              "type": "string",
              "description": "Prize for reaching 3000 points."
            }
          }
        }
      }
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores user profile information, including settings and progress."
    },
    "/users/{userId}/attempts/{attemptId}": {
      "schema": {
        "$ref": "#/entities/attempt"
      },
      "description": "Stores a user's attempts at math problems."
    }
  }
}
